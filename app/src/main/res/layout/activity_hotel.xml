<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:id="@+id/hot"
    android:background="@color/white"
    tools:context=".Total_message">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HOTEL"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#111111">

        </TextView>
    </androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/ad"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:gravity="center"

        android:layout_marginTop="100dp"
        android:background="@drawable/round_btn"
        android:text="Add Hotel"
        android:textColor="#F7F6F6"
        android:textSize="20dp" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TableLayout
                android:layout_width="900dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="#f1f1f1">


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel Name"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="#070707"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#070707"
                        android:text="Country"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#070707"
                        android:text="City"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#070707"
                        android:text="Destination"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Short Discription"
                        android:textStyle="bold"
                        android:textColor="#070707"
                        android:layout_weight="1"  android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ACTION"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:textColor="#070707"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KFC"
                        android:textColor="#070707"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="India"
                        android:textColor="#070707"
                        android:layout_gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="1.7"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bhopal"
                        android:textColor="#070707"
                        android:layout_gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="1.7"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MP Nagar"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:textColor="#070707"
                        android:layout_weight="2.8"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="very good hotel with parking"
                        android:layout_gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:textColor="#070707"
                        android:layout_weight="1"/>



                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/del6"
                            android:layout_width="80px"
                            android:layout_height="70px"
                            android:layout_gravity="center"
                            android:layout_span="2"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/delete_round"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:text="Delete"/>
                        <Button
                            android:id="@+id/ed1"
                            android:layout_width="80px"
                            android:layout_height="70px"
                            android:layout_gravity="center"
                            android:layout_span="2"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/edit1_round"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:text="Edit"/>

                    </LinearLayout>


                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dominoz"
                        android:textColor="#070707"
                        android:layout_gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="India"
                        android:textColor="#070707"
                        android:layout_gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="1.7"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bhopal"
                        android:textColor="#070707"
                        android:layout_gravity="center"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="1.7"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lalghati"
                        android:layout_gravity="center"
                        android:textColor="#070707"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="2.8"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="good for pizza"
                        android:layout_gravity="center"
                        android:textColor="#070707"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textSize="20dp"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/del4"
                            android:layout_width="80px"
                            android:layout_height="70px"
                            android:layout_gravity="center"
                            android:layout_span="2"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/delete_round"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:text="Delete"/>
                        <Button
                            android:id="@+id/ed13"
                            android:layout_width="80px"
                            android:layout_height="70px"
                            android:layout_gravity="center"
                            android:layout_span="2"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/edit1_round"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:text="Edit"/>

                    </LinearLayout>

                </TableRow>
            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>